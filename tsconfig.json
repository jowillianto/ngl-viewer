{
  "compilerOptions": {
    "target": "es5",
    // "baseUrl": "./src",
    "paths" : {
      "text-editor" : [
        "../node_modules/@jowillianto/draftjs-wysiwyg/src/text-editor"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src", 
    "node_modules/@jowillianto"
  ]
}
